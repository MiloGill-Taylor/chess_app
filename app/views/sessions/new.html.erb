<% provide(:title, "Log in") %>


<header id="header">
	<%= link_to 'Home', root_path, class: 'home_button' %>
	<h1 class='main_title'>Log in</h1>
</header>

<div class='form'>
	<%= form_with(url: login_path, scope: :session) do |f| %>

		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit 'Log in', class: 'button' %>

	<% end %>
	<p>New user? <%= link_to "Sign up now!", new_user_path %> </p>
</div>